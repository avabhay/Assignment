// bake your code here
function pair_color(array){
    var n=array.length;
     var pair_count=0;
    for(i=0;i<n;i++)
    {
        if((i+1)<n && array[i]==array[i+1]){
            pair_count++;
            i++;
            
        }
    }
    document.write( "Unique Pair count is :" + pair_count);
}
var array=[4,4,4,4,3,3,3,5,5,5,5,1,1,1,2];
pair_color(array);
